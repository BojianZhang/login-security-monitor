# 生产环境配置
# 复制此文件为 .env 并根据实际环境修改配置
# ⚠️ 警告: 请确保在生产环境中更改所有默认密码和密钥

# ===================
# 数据库配置  
# ===================
# ⚠️ 必须使用强密码，建议16位以上包含特殊字符
DB_ROOT_PASSWORD=CHANGE_THIS_STRONG_ROOT_PASSWORD_AT_LEAST_16_CHARS
DB_NAME=login_security_monitor
DB_USERNAME=monitor_user
DB_PASSWORD=CHANGE_THIS_STRONG_DB_PASSWORD_AT_LEAST_16_CHARS

# ===================
# Redis配置
# ===================  
# ⚠️ 必须使用强密码
REDIS_PASSWORD=CHANGE_THIS_STRONG_REDIS_PASSWORD_AT_LEAST_16_CHARS

# ===================
# JWT配置
# ===================
# 使用强随机密钥，至少256位
# 生成命令: openssl rand -base64 64
JWT_SECRET=MUST_CHANGE_THIS_GENERATE_WITH_openssl_rand_base64_64_OR_SYSTEM_WILL_BE_COMPROMISED
JWT_EXPIRATION=86400000

# ===================
# 邮件配置
# ===================
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-specific-password
MAIL_FROM=Security Monitor <noreply@yourcompany.com>

# ===================
# 管理员配置
# ===================
ADMIN_EMAILS=admin@yourcompany.com,security@yourcompany.com

# ===================
# 应用配置
# ===================
LOG_LEVEL=INFO
SERVER_PORT=8080

# ===================
# 安全配置
# ===================
# CORS允许的域名，生产环境必须配置具体域名
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# 会话超时时间(秒)
SESSION_TIMEOUT=1800

# 最大登录尝试次数
MAX_LOGIN_ATTEMPTS=3

# ===================
# 监控配置
# ===================  
GRAFANA_PASSWORD=CHANGE_THIS_GRAFANA_ADMIN_PASSWORD

# ===================
# SSL证书配置（生产环境）
# ===================
SSL_CERT_PATH=/etc/ssl/certs/certificate.crt
SSL_KEY_PATH=/etc/ssl/private/private.key

# ===================
# 域名配置（生产环境）
# ===================
DOMAIN_NAME=yourdomain.com